#include <stdio.h>

int main()
{ 
    int n; 
    printf("\nEnter the no of elements in the array"); 
    scanf("%d",&n); 
    int target; 
    printf("\nEnter the target element");
    scanf("%d",&target);
    int num[n]; 
    int x;
    for(int k=0;k<n;k++)
    {
    printf("\nEnter the %dth element in the array",k); 
    scanf("%d",&num[k]);
    } 
    
    for(int q=0;q<(n-1);q++)
    {
        x=target-(num[q]+num[q+1]);
    for(int i=0;i<(n-2);i++)
    {
       for(int j=1;j<n;j++)
       {
           if((num[i]+num[j])==x)
           { 
               if(i==q || i==(q+1) || j==q || j==(q+1))
               {
                   continue ;
               }
               printf("\nThe index are %d , %d , %d & %d ",q,(q+1),i,j);
           }
       } 
    }
    x=0;
    }
    return 0;
} 


